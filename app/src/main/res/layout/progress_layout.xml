<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/progress_screen"
>

    <ProgressBar
            android:id="@+id/loadingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Seems like bla bla bla bla"
              android:gravity="center"
              android:padding="8dp"
                  android:textAppearance="@style/TextAppearance.PrayerTimes.Content"
              android:id="@+id/info_message"
              android:layout_below="@+id/loadingBar"
              android:textSize="15sp"
              android:visibility="gone"
    />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/retryButton"
            style="@style/Widget.PrayerTimes.BorderlessButton"
            android:layout_centerHorizontal="true"
            android:text="Retry"
            android:layout_below="@id/info_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
    />



</RelativeLayout>